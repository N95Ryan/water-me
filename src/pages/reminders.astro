import Layout from '../layouts/Layout.astro';
---

<Layout title="Water Me - Configurez vos rappels">
  <div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-[#00617a] via-[#206f86] to-[#618c9f] text-white">
    <!-- Header -->
    <header class="w-full max-w-4xl py-4 sm:py-6 px-4">
      <div class="flex items-center justify-between mb-4">
        <a href="/" class="flex items-center text-white hover:text-gray-200 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Retour
        </a>
      </div>
      <h1 class="text-3xl sm:text-4xl font-bold text-center">Water Me ðŸ’§</h1>
    </header>

    <!-- Contenu principal -->
    <main class="flex flex-col items-center text-center p-4 sm:p-8 w-full max-w-md">
      <h2 class="text-2xl sm:text-3xl font-bold mb-6">Configurez vos rappels</h2>
      
      <form class="w-full space-y-6 bg-white/10 p-6 rounded-xl backdrop-blur-sm">
        <div class="space-y-2">
          <label for="daily-goal" class="block text-left text-lg">Objectif quotidien (ml)</label>
          <input 
            type="number" 
            id="daily-goal" 
            name="daily-goal" 
            min="500" 
            max="4000" 
            step="100"
            value="2000"
            class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50"
          />
        </div>

        <div class="space-y-2">
          <label for="reminder-interval" class="block text-left text-lg">Intervalle entre les rappels (minutes)</label>
          <input 
            type="number" 
            id="reminder-interval" 
            name="reminder-interval" 
            min="15" 
            max="180" 
            step="15"
            value="60"
            class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50"
          />
        </div>

        <div class="space-y-2">
          <label for="start-time" class="block text-left text-lg">Heure de dÃ©but</label>
          <input 
            type="time" 
            id="start-time" 
            name="start-time" 
            value="08:00"
            class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50"
          />
        </div>

        <div class="space-y-2">
          <label for="end-time" class="block text-left text-lg">Heure de fin</label>
          <input 
            type="time" 
            id="end-time" 
            name="end-time" 
            value="22:00"
            class="w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50"
          />
        </div>

        <button 
          type="submit"
          class="w-full mt-6 px-6 py-3 bg-white text-[#206f86] rounded-lg text-lg font-semibold shadow-lg hover:bg-gray-200 transition-colors"
        >
          Activer les rappels
        </button>
      </form>
    </main>

