---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";

interface Props {
  title: string;
  subtitle: string;
  description: string;
  className?: string;
}

const { title, subtitle, description, className = "" } = Astro.props;
---

<section
  class={`flex flex-col items-center text-center p-4 sm:p-8 ${className}`}
>
  <Image
    src={logo}
    alt="Water Me Logo"
    class="h-24 sm:h-32 w-auto drop-shadow-lg hover:drop-shadow-xl transition-all duration-300 mb-6"
    width={300}
    height={300}
    quality="high"
  />

  <h1 class="text-3xl sm:text-4xl font-bold mb-3 sm:mb-4">{title}</h1>
  <h2 class="text-xl sm:text-4xl font-bold mb-3 sm:mb-4">{subtitle}</h2>
  <p class="text-base sm:text-lg text-gray-200 max-w-lg px-4">
    {description}
  </p>
</section>
